<div class="page-header">
<h1>Users <small>aren't they a funny bunch!</small></h1>
</div>

<div class="row">
<div class="span10 offset2">
<% @users.each do |user| %>
<div class="mypic">
<%= image_tag user.avatar.url(:thumb), :class=> "img-circle" %>
</div>
<p>User Name: <%= link_to user.name, user %></p>

<% if admin_signed_in? %>
        <%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %>
      <%end%>
<%end%>
</div>
</div>

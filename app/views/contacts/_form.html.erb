<%= simple_form_for(@contact, :html => {:class => 'form-horizontal' }) do |f| %>
  
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :subject %>
    <%= f.input :comment, :as => :text, :input_html => { :cols => 100, :rows => 10, :style => 'width: 400px' } %>
  </div>

  <div class="control-group">
  <div class="controls">
    <%= f.button :submit, 'Send' %>
  </div>
  </div>
<% end %>
